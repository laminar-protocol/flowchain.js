{
    "extends": "./node_modules/@polkadot/dev/config/tsconfig",
    "exclude": [
      "build/**/*",
      "**/build/**/*"
    ],
    "compilerOptions": {
      "baseUrl": ".",
      "paths":
      {
        "@flowchain/api": ["packages/api/src"],
        "@flowchain/api/*": ["packages/api/src/*"],
        "@flowchain/types": ["packages/types/src"],
        "@flowchain/types/*": ["packages/types/src/*"],
      },
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@polkadot/ts",
        "./node_modules/@types"
      ]
    }
  }
