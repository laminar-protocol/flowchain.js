{
  "version": "0.2.0-beta.144",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn check-deps && yarn build:interfaces && polkadot-dev-build-ts",
    "build:interfaces": "node -r ts-node/register -r tsconfig-paths/register packages/types/scripts/generate.ts",
    "build:metadata": "yarn build:metadataStatic && yarn build:metadataJson",
    "build:metadataStatic": "ts-node -r tsconfig-paths/register --project ./tsconfig.json packages/types/scripts/metadataStatic.ts",
    "build:metadataJson": "ts-node -r tsconfig-paths/register --project ./tsconfig.json packages/types/scripts/metadataJson.ts",
    "lint": "polkadot-dev-run-lint",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "jest --testPathIgnorePatterns e2e",
    "check-deps": "./node_modules/@open-web3/util/scripts/check-deps.js yarn.lock @polkadot/ @open-web3/"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/register": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@open-web3/dev-config": "^0.1.10",
    "@open-web3/util": "^0.8.2-9",
    "@types/jest": "^25.2.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
